mouse-hide-while-typing = true

# Custom keybinding
# keybind = global:cmd+ctrl+alt+t=toggle_quick_terminal
keybind = super+ctrl+alt+,=reload_config
keybind = super+ctrl+alt+equal=close_surface

# Leader key (cmd+k) sequences
keybind = super+k>p=toggle_command_palette
keybind = super+k>k=clear_screen
keybind = super+k>n=new_window
keybind = super+k>x=close_surface
#splits/panes
keybind = super+k>h=new_split:left
keybind = super+k>l=new_split:right
keybind = super+k>backslash=new_split:right
keybind = super+k>minus=new_split:down
keybind = super+k>j=new_split:down
keybind = super+k>u=new_split:up
keybind = super+k>z=toggle_split_zoom
keybind = super+k>equal=equalize_splits
#w/o leader key
keybind = super+ctrl+alt+backslash=new_split:right
keybind = super+ctrl+alt+minus=new_split:down
keybind = super+ctrl+alt+h=resize_split:left,50
keybind = super+ctrl+alt+j=resize_split:down,50
keybind = super+ctrl+alt+k=resize_split:up,50
keybind = super+ctrl+alt+l=resize_split:right,50
keybind = super+ctrl+alt+z=toggle_split_zoom
#tabs
keybind = super+k>t=new_tab
keybind = super+k>e=prompt_surface_title
keybind = super+k>1=goto_tab:1
keybind = super+k>2=goto_tab:2
keybind = super+k>3=goto_tab:3
keybind = super+k>4=goto_tab:4
keybind = super+k>5=goto_tab:5
keybind = super+k>6=goto_tab:6
keybind = super+k>7=goto_tab:7
keybind = super+k>8=goto_tab:8
#w/o leader key
keybind = super+ctrl+alt+[=move_tab:-1
keybind = super+ctrl+alt+]=move_tab:1

# fzf.fish keybindings - Cmd+Ctrl sends Ctrl+Alt sequences to fish
keybind = super+ctrl+f=text:\x1b\x06
keybind = super+ctrl+l=text:\x1b\x0c
keybind = super+ctrl+s=text:\x1b\x13
keybind = super+ctrl+r=text:\x12
keybind = super+ctrl+p=text:\x1b\x10
keybind = super+ctrl+v=text:\x16
keybind = shift+enter=text:\x1b\r
