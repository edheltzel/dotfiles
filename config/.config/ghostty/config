scrollback-limit = 1000000000

window-colorspace = "display-p3"
window-inherit-font-size = false
window-padding-x = 10
window-save-state = always
window-title-font-family = "Lilex Nerd Font Mono"

mouse-hide-while-typing = true
macos-non-native-fullscreen = true
macos-option-as-alt = true
macos-titlebar-style = tabs
macos-titlebar-proxy-icon = hidden
macos-window-buttons = hidden
macos-icon =  retro

# Custom keybinding
keybind = global:cmd+ctrl+alt+t=toggle_quick_terminal

keybind = super+ctrl+,=reload_config
keybind = super+ctrl+equal=close_surface

keybind = super+ctrl+alt+h=resize_split:left,10
keybind = super+ctrl+alt+j=resize_split:down,10
keybind = super+ctrl+alt+k=resize_split:up,10
keybind = super+ctrl+alt+l=resize_split:right,10
keybind = super+ctrl+alt+[=move_tab:-1
keybind = super+ctrl+alt+]=move_tab:1

# Leader key (cmd+k) sequences
keybind = super+k>p=toggle_command_palette
keybind = super+k>k=clear_screen
#splits
keybind = super+k>backslash=new_split:right
keybind = super+k>minus=new_split:down
keybind = super+k>z=toggle_split_zoom
keybind = super+k>equal=equalize_splits
#tabs
keybind = super+k>t=new_tab
keybind = super+k>x=close_surface
keybind = super+k>e=prompt_surface_title
keybind = super+k>1=goto_tab:1
keybind = super+k>2=goto_tab:2
keybind = super+k>3=goto_tab:3
keybind = super+k>4=goto_tab:4
keybind = super+k>5=goto_tab:5
