[
	// Workspace
	{
		"context": "Workspace",
		"bindings": {
			"cmd-k cmd-x": "zed::Extensions",
			"cmd-k cmd-g": "git_panel::ToggleFocus",
			"cmd-k cmd-e": "project_panel::ToggleFocus",
			"ctrl-cmd-home": "git::Push",
			"ctrl-alt-p": "workspace::ToggleZoom",
			"alt-home": "project_panel::CollapseAllEntries",
			"alt-cmd-b": "workspace::ToggleLeftDock",
			"cmd-b": "workspace::ToggleRightDock",
			// Tabs/Buffers
			"cmd-1": ["pane::ActivateItem", 0],
			"cmd-2": ["pane::ActivateItem", 1],
			"cmd-3": ["pane::ActivateItem", 2],
			"cmd-4": ["pane::ActivateItem", 3],
			"cmd-5": ["pane::ActivateItem", 4],
			"cmd-6": ["pane::ActivateItem", 5],
			"cmd-7": ["pane::ActivateItem", 6],
			"cmd-8": ["pane::ActivateItem", 7],
			"cmd-9": ["pane::ActivateItem", 8]
			// AI
		}
	},
	// Window navigation
	{
		"context": "Dock || Terminal || Editor",
		"bindings": {
			"ctrl-h": "workspace::ActivatePaneLeft",
			"ctrl-l": "workspace::ActivatePaneRight",
			"ctrl-k": "workspace::ActivatePaneUp",
			"ctrl-j": "workspace::ActivatePaneDown"
		}
	},
	//Project Panel
	{
		"context": "ProjectPanel && !editing",
		"bindings": {
			"r": "project_panel::Rename"
		}
	},
	// Terminal
	{
		"context": "Terminal",
		"bindings": {
			"cmd-ctrl-=": "pane::CloseActiveItem",
			"cmd-shift-d": "pane::SplitRight",
			"cmd-d": "pane::SplitDown"
		}
	},
	// Tasks
	{
		"context": "Editor && VimControl && !VimWaiting && !menu",
		"bindings": {
			"space g g": [
				"task::Spawn",
				{
					"task_name": "LazyGit",
					"reveal_target": "center"
				}
			],
			"space a d": [
				"task::Spawn",
				{
					"task_name": "Droid",
					"reveal_target": "center"
				}
			],
			"space a c": [
				"task::Spawn",
				{
					"task_name": "Claude Code",
					"reveal_target": "center"
				}
			],
			"space a o": [
				"task::Spawn",
				{
					"task_name": "Opencode",
					"reveal_target": "center"
				}
			]
		}
	},
	{
		"context": "Editor && VimControl && !VimWaiting && !menu",
		"bindings": {}
	},
	// Editor + Vim
	{
		"context": "Editor && VimControl && !VimWaiting && !menu",
		"bindings": {
			"space f f": "file_finder::Toggle",
			"space f s": "workspace::Save",
			"space f shift-s": "workspace::SaveAll",
			"space b b": "tab_switcher::ToggleAll",
			"space b o": "pane::CloseAllItems",
			"space b d": "pane::CloseActiveItem",
			"space b h": "pane::SplitAndMoveLeft",
			"space b j": "pane::SplitAndMoveDown",
			"space b k": "pane::SplitAndMoveUp",
			"space b l": "pane::SplitAndMoveRight",
			"space c c": [
				"agent::NewExternalAgentThread",
				{ "agent": "claude_code" }
			],
			"space c g": ["agent::NewExternalAgentThread", { "agent": "gemini" }]
		}
	},
	// Vim Buffer Navigation
	{
		"context": "vim_mode == normal || vim_mode == visual",
		"bindings": {
			"g h": "editor::MoveToBeginningOfLine",
			"g l": "editor::MoveToEndOfLine",
			"s": "vim::PushSneak",
			"S": "vim::PushSneakBackward",
			"cmd-shift-d": "editor::DuplicateLineDown"
		}
	},
	{
		"context": "Workspace",
		"bindings": {
			"alt-`": "workspace::NewCenterTerminal"
		}
	}
]
