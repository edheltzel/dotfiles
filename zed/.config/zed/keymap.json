[
	// Workspace
	{
		"context": "Workspace",
		"bindings": {
			"cmd-k cmd-x": "zed::Extensions",
			"cmd-k cmd-g": "git_panel::ToggleFocus",
			"cmd-k cmd-e": "project_panel::ToggleFocus",
			"ctrl-cmd-home": "git::Push",
			"ctrl-alt-p": "workspace::ToggleZoom"
		}
	},
	// Terminal
	{
		"context": "Terminal",
		"bindings": {
			"cmd-ctrl-=": "pane::CloseActiveItem",
			"cmd-shift-d": "pane::SplitUp",
			"cmd-d": "pane::SplitLeft"
		}
	},
	{
		"context": "Editor && VimControl && !VimWaiting && !menu",
		"bindings": {
			"space f s": "workspace::Save",
			"space f shift-s": "workspace::SaveAll",
			"space b b": "tab_switcher::ToggleAll",
			"space b o": "pane::CloseAllItems",
			"space b d": "pane::CloseActiveItem",
			"space b h": "pane::SplitAndMoveRight",
			"space b j": "pane::SplitAndMoveDown",
			"space b k": "pane::SplitAndMoveUp",
			"space b l": "pane::SplitAndMoveLeft"
		}
	},
	// Git
	{
		"context": "Editor && VimControl && !VimWaiting && !menu",
		"bindings": {
			"space g g": [
				"task::Spawn",
				{
					"task_name": "LazyGit",
					"reveal_target": "center"
				}
			]
		}
	},
	// Buffer navigation
	{
		"context": "vim_mode == normal || vim_mode == visual",
		"bindings": {
			"g h": "editor::MoveToBeginningOfLine",
			"g l": "editor::MoveToEndOfLine",
			"s": "vim::PushSneak",
			"S": "vim::PushSneakBackward",
			"cmd-shift-d": "editor::DuplicateLineDown"
		}
	},
	// Window's navigation
	{
		"context": "Dock || Terminal || Editor",
		"bindings": {
			// Window's motions
			"ctrl-h": "workspace::ActivatePaneLeft",
			"ctrl-l": "workspace::ActivatePaneRight",
			"ctrl-k": "workspace::ActivatePaneUp",
			"ctrl-j": "workspace::ActivatePaneDown"
		}
	},
	{
		"context": "Workspace",
		"bindings": {
			"alt-cmd-b": "workspace::ToggleLeftDock"
		}
	},
	{
		"context": "Workspace",
		"bindings": {
			"cmd-b": "workspace::ToggleRightDock"
		}
	}
]
